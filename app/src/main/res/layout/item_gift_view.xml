<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        >

        <ImageView
            android:id="@+id/grid_fragment_home_item_bg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/i8live_gift_select"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="1dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_lianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
              android:src="@drawable/i8live_lianji" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/grid_fragment_home_item_img"
            android:layout_marginTop="3dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/grid_fragment_home_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="花季的单车"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/grid_fragment_home_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="216钻"
            android:textColor="#968e9c"
            android:textSize="9sp" />
    </LinearLayout>
</RelativeLayout>